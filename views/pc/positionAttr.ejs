            // ############## 금주의 BEST/WORST [시작] ##########################################

            function drawStatsList(data) {
                let tk = dataFilter(data.row, "all", "탱커", "DESC");
                drawStatsListDiv("aTK", dataFilter(data.row, "all", "탱커", "DESC"));
                drawStatsListDiv("aAT", dataFilter(data.row, "all", "근거리딜러", "DESC"));
                drawStatsListDiv("aWD", dataFilter(data.row, "all", "원거리딜러", "DESC"));
                drawStatsListDiv("aSP", dataFilter(data.row, "all", "서포터", "DESC"));

                drawStatsListDiv("wTK", dataFilter(data.row, "W", "탱커", "DESC"));
                drawStatsListDiv("wAT", dataFilter(data.row, "W", "근거리딜러", "DESC"));
                drawStatsListDiv("wWD", dataFilter(data.row, "W", "원거리딜러", "DESC"));
                drawStatsListDiv("wSP", dataFilter(data.row, "W", "서포터", "DESC"));

            }

            function dataFilter(row, checkType, position, order) {
                let list = row
                    .filter(item => item.checkType == checkType)
                    .filter(item => item.POSITION == position)
                    .sort(order == "DESC" ? rateDesc : rateAsc);
                return list;
            }

            function drawStatsListDiv(divId, data) {
                var table = $("#matchInfoTemplate").clone();
                table.removeAttr("id");
                let tbody = table.find("tbody");

                if (data.length == 0) {
                    let tr = "<tr><td colspan='5'>데이터가 없습니다.</td></tr>";
                    tbody.append(tr);
                }

                let idx = 0;
                for (idx in data) {
                    let row = data[idx];
                    let tr =
                        `<tr>
                            <td>${getPositionAttrImg(row.attr.split("/"))}</td>
                            <td>${numberWithCommas(row.total)}</td>
                            <td>${numberWithCommas(row.win)}</td>
                            <td>${numberWithCommas(row.lose)}</td>
                            <td>${row.rate}%</td>
                        </tr>`;
                    tbody.append(tr);
                }
                $("#" + divId).append(table);
            }

            function getPositionAttrImg(arr) {
                let images = "";

                for (idx in arr) {
                    images += `&nbsp;&nbsp;&nbsp;<img title='${arr[idx]}' data-item='${arr[idx]}' ` +
                        ` src='https://img-api.neople.co.kr/cy/position-attributes/${positionAttr.get(arr[idx])}'>`;
                }
                return images;
            }

            // ############## 금주의 BEST/WORST [종료] ##########################################

            function numberWithCommas(x) {
                // 걍 toLocaleString() 할까..
                return x.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
            }

            function isValid() {
                let pattern = /[0-9]{4}-(0?[1-9]|1[012])-(0?[1-9]|[12][0-9]|3[01])/;
                if (!pattern.test($("#fromDt").val())) {
                    alert("시작일이 유효하지 않습니다");
                    return false;
                }

                if (!pattern.test($("#toDt").val())) {
                    alert("종료일이 유효하지 않습니다");
                    return false;
                }

                return true;
            }

            function onOffEvent(isOn = false) {
                if (isOn) {
                    $("#searchButton").on("click", searchCombi);
                    $("#charName").on("keyPress", function(event) {
                        if (event.keyCode == 13) {
                            searchCombi();
                        }
                    });
                } else {
                    $("#searchButton").on("click", "");
                    $("#charName").on("onKeyPress", "");
                }
            }

            function callLoadingBar(show) {
                if (show) {
                    $("#loadingbutton").show();
                    $("#searchButton").hide();
                } else {
                    $("#loadingbutton").hide();
                    $("#searchButton").show();
                }
            }
        </script>
